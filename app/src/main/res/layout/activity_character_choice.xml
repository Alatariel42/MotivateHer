    <Button android:id="@+id/uploadbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center|top"
        android:background="#060304"
        android:textColor="#f9ed01"
        android:textSize= "20pt"
        android:onClick= "addImage"
        android:text="Upload new image"
        />

    <Button android:id="@+id/choosebutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_gravity="center|bottom"
        android:background="#060304"
        android:textColor="#f9ed01"
        android:textSize= "20pt"
        android:onClick= "chooseImage"
        android:text="Choose image"
        android:layout_below="@+id/uploadbutton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/choosebutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
    android:layout_width="276dp"
    android:layout_height="234dp"
    android:src="@mipmap/ic_launcher2"
    android:layout_weight="0.63"
        android:layout_marginTop="23dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="276dp"
        android:layout_height="234dp"
        android:src="@mipmap/wwii_computers"
