    <ImageView
        android:layout_width="276dp"
        android:layout_height="234dp"
        android:src="@mipmap/hopper"
        android:layout_weight="0.63" />
     <ImageView
         android:layout_width="276dp"
         android:layout_height="234dp"
         android:src="@mipmap/emma"
         android:layout_weight="0.63" />
</LinearLayout>
    </ScrollView>
